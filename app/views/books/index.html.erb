
<head></head>
<body>
  <h1>Books</h1>
  <table>
    <thead>
      <th>title</th>
      <th>body</th>
    </thead>
    <tbody>
       <% @books.each do |book| %>
       <tr>
        <td> <%= book.title %> </td>
        <td><%= book.body %></td>
        <td><%= link_to "Show" , book_path(book.id) %></td>
        <td><%= link_to "Edit" , edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy" ,book_path(book.id) ,method:  :delete  , "data-confirm" => "本当に削除しますか？" %></td>
       </tr>
      <% end %>
     </tbody>  
  <table>
</body>


<h3>New book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%=form_with model:@book do |t| %>
 <h4>title</h4>
  <%= t.text_field :title %>

  <h4>body</h4>
  <%= t.text_area :body %>
 <%= t.submit 'Create Book' %>
<% end %>

